{
    "name": "hupa",
    "version": "1.0.0",
    "description": "Discord Music Bot by Rafly Maulana & Runes",
    "main": "index.js",
    "license": "MIT",
    "author": {
        "email": "mraflymaulana@gmail.com",
        "name": "Rafly Maulana",
        "url": "https://raflymaulana.me"
    },
    "scripts": {
        "lint": "eslint ./src/ --ext .ts",
        "start": "node ./dist/index.js",
        "dev": "yarn build --watch",
        "build": "node esbuild.js",
        "build:prod": "yarn build --production",
        "db:pull": "prisma db pull",
        "db:generate": "prisma generate",
        "db:build": "yarn db:pull && yarn db:generate"
    },
    "keywords": [],
    "dependencies": {
        "@prisma/client": "^4.3.1",
        "chokidar": "^3.5.3",
        "dotenv": "^16.0.2",
        "esbuild": "^0.15.8",
        "fast-glob": "^3.2.12",
        "tsc-alias": "^1.7.0"
    },
    "devDependencies": {
        "@types/node": "^18.7.18",
        "eslint": "^8.23.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.7.1",
        "prisma": "^4.3.1",
        "typescript": "^4.8.3"
    },
    "eslintConfig": {
        "plugins": [
            "prettier"
        ],
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "parserOptions": {
            "sourceType": "module",
            "ecmaVersion": 2018
        },
        "rules": {
            "no-case-declarations": "off",
            "no-empty-function": "off",
            "prefer-const": "off",
            "prettier/prettier": "error",
            "react/no-unescaped-entities": "off"
        },
        "env": {
            "node": true
        }
    },
    "prettier": {
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "endOfLine": "auto",
        "htmlWhitespaceSensitivity": "css",
        "printWidth": 200,
        "semi": true,
        "tabWidth": 4
    }
}
